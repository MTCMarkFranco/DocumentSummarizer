{
    "@odata.type": "#Microsoft.Skills.Text.SplitSkill",
    "textSplitMode": "pages",
    "maximumPageLength": 4000,
    "pageOverlapLength": 100,
    "defaultLanguageCode": "en",
    "name": "#5",
    "description": "split the merged_content into a new field called content_chunked",
    "context": "/document",
    "inputs": [
      {
        "name": "text",
        "source": "/document/merged_content"
      },
      {
          "name": "languageCode",
          "source": "/document/language"
      }
    ],
    "outputs": [
      {
        "name": "textItems",
        "targetName": "content_chunked"
      }
    ]
  }